<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:paddingBottom="15dp">

    <androidx.cardview.widget.CardView
        android:layout_width="109dp"
        android:layout_height="70dp"
        app:cardCornerRadius="5dp">

    <ImageView
        android:id="@+id/basketImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/s3"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:text="Fitmama's annual diary for busy women"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="13dp"
        android:textSize="14sp"
        android:textColor="#000000"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/plus"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_gravity="center"
                android:background="@drawable/plus_bounds"
                android:gravity="center"
                android:text="+"
                android:textAlignment="center"
                android:textColor="#B32078"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/count"
                android:layout_width="38dp"
                android:layout_height="31dp"
                android:layout_gravity="center"
                android:background="@drawable/count_bounds"
                android:gravity="center"
                android:text="1"
                android:textAlignment="center"
                android:textColor=" #000000"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/minus"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_gravity="center"
                android:background="@drawable/minus_bounds"
                android:gravity="center"
                android:text="-"
                android:textAlignment="center"
                android:textColor="#B32078"
                android:textSize="20dp" />

        </LinearLayout>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:textColor="#B32078"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="$378.00"
                android:textAlignment="textEnd"/>
    </LinearLayout>

        <ImageView
            android:id="@+id/delete"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_basket_item_clear_24"
            android:layout_marginStart="6dp"
            android:layout_marginTop="3dp"/>
</LinearLayout>